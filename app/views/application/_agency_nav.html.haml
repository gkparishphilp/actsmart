= stylesheet_link_tag "agency_nav", media: "all"

%nav.navbar.navbar-default.navbar-fixed-top{ role: 'navigation', style: 'background: #eee;' }
	.navbar-inner{ style: 'border-bottom:1px #ddd solid;' }
		.container
			.navbar-header
				%a.navbar-brand.brand.nav-header{ href: '/' }
					= image_tag 'logo_sq.png', width: 30, :class => "headerImg"
					Act SMART
				%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
					%span.sr-only Toggle navigation
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
			#top-navigation.nav-collapse.subnav-collapse.navbar-collapse.collapse
				%ul.nav.navbar-nav.navbar-left
					-#%li
						%a.nav-header{ href: '/about' }
							About
					%li
						%a.nav-header{ href: '/project_team' }
							Research Team
					%li
						%a.nav-header{ href: '/faqs' }
							FAQs
					%li
						%a.nav-header{ href: dashboard_index_path }
							Dashboard
					- if @current_agency
						%li
							%a.nav-header{ href: '/getting_ready' }
								Getting Ready
						%li
							%a.nav-header{ href: '/glossary' }
								Glossary

						- if @current_agency.lead == current_user
							%li
								%a.nav-header{ href: manage_team_index_path }
									Agency Team

				%ul.nav.navbar-nav.navbar-right{ style: 'margin-right:0.5em;' }				
					- if current_user
						%li
							%a.nav-header{ href: dashboard_index_path, style: 'text-decoration:none;' }
								Hi
								= current_user.name.titleize
						%li
							%a.nav-header{ href: '/logout' }
								Logout


!!!strict

%html{ lang: :en }
	%head
		%title
			ActSMART
		%meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

		%link{ rel: 'shortcut icon', href: asset_path( 'assets/favicon.ico ') }

		= stylesheet_link_tag    "application", media: "all"
		= stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/themes/smoothness/jquery-ui.css'
		
		= yield :head

		= javascript_include_tag "application"

			
		= csrf_meta_tags

	%body{ style: 'padding-top: 60px;' }
		.wrapper
			- if @current_agency.present?
				= render 'application/agency_nav'
			- elsif current_user && current_user.admin?
				= render 'application/admin_nav'
			- else
				= render 'application/nav'
			= render 'application/flash'
		
			= yield
			%br
			%br
			.push

		= render 'application/footer'


					